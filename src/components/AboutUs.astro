<style>
  section {
    background-color: #e5e5e5;
    position: relative;
    padding: 9.6rem 0 14.5rem 0;
  }

  section::before {
    content: '';
    position: absolute;
    background: url('/img/plant-services.png');
    height: 419px;
    width: 314px;
    transform: rotate(20deg);
    left: -60px;
  }

  .container {
    display: flex;
    font-size: 6rem;
    gap: 6rem;
    font-family: var(--ff-primary);
    z-index: 1;
    justify-content: space-between;
  }

  img {
    width: auto;
    height: auto;
    max-width: 601px;
    max-height: 741px;
  }

  .about-img {
    position: relative;
    z-index: 2;
    margin-left: 2.4rem;
  }

  .about-img::before {
    content: '';
    width: 405px;
    height: 706px;
    background: var(--clr-primary);
    left: -25px;
    top: -25px;
    position: absolute;
    z-index: -1;
  }

  .about-img::after {
    content: '';
    background: url('/img/gardeningTools.jpg');
    background-size: cover;
    position: absolute;
    width: 456px;
    object-fit: cover;
    height: 249px;
    top: 565px;
    left: 130px;
    border: 15px solid #fff;
    border-radius: 5px;
  }

  .about-text {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  h2 {
    font-size: 3.6rem;
    font-weight: 800;
    line-height: 1.2;
  }

  h2 span {
    color: var(--clr-primary);
  }

  p {
    font-size: 1.6rem;
    font-weight: 400;
    line-height: 2.8rem;
    color: #676767;
  }

  ul {
    display: grid;
    grid-template-columns: 1fr 1fr;
    list-style-type: none;
    justify-items: center;
    align-items: center;
    gap: 2rem;
  }

  li {
    display: flex;
    background: #fff;
    padding: 1.2rem;
    border-radius: 0.5rem;
    width: 100%;
    gap: 2rem;
    justify-content: center;
  }

  li span {
    font-size: 2.4rem;
    font-weight: 700;
  }

  [astro-icon] {
    color: var(--clr-primary);
  }

  a {
    width: fit-content;
  }
</style>
