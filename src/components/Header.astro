---
import Hamburger from './Hamburger.astro'
import Nav from './Nav.astro'
---

<header class='header'>
  <a href='#' class='logo'>Logo</a>
  <nav class='main-nav'>
    <Nav />
  </nav>
  <Hamburger />
</header>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 auto;
    height: 9.6rem;
    font-family: var(--ff-primary);
    background: #fff;
    padding: 0 6.4rem;
    max-width: 170rem;
  }
  .logo {
    font-size: 4rem;
    text-decoration: none;
    color: var(--fc-dark);
  }
  /**************************/
  /*      Below 1328px      */
  /*     (Small Laptops)    */
  /**************************/
  @media (max-width: 83em) {
  }
  /**************************/
  /*       Below 1200px     */
  /*   (Landscape Tablet)   */
  /**************************/
  @media (max-width: 75em) {
  }
  /**************************/
  /*       Below 1024px     */
  /**************************/
  @media (max-width: 64em) {
    .header {
      padding: 3.2rem;
      height: auto;
    }

    .main-nav {
      background: rgba(0, 0, 0, 0.9);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      transform: translateX(100%);
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.5s ease-in;

      opacity: 0;
      pointer-events: none;
      visibility: hidden;
    }

    .nav-open .main-nav {
      opacity: 1;
      pointer-events: auto;
      visibility: visible;
      transform: translateX(0);
      z-index: 1;
    }
  }
  /**************************/
  /*       Below 544px      */
  /*        (Phones)        */
  /**************************/
  @media (max-width: 34em) {
    .header {
      padding: 0 2.4rem;
    }
    /* Mobile Navigation */
  }
</style>
